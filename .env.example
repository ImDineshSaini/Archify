# Copy this file to .env and update with your actual values

# Application
APP_NAME=Archify
APP_VERSION=1.0.0
DEBUG=True

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://archify:archify123@postgres:5432/archify

# Redis
REDIS_URL=redis://redis:6379/0

# LLM Providers (Configure via Admin Settings Panel)
DEFAULT_LLM_PROVIDER=claude
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=

# GitHub/GitLab (Configure via Admin Settings Panel)
GITHUB_TOKEN=
GITLAB_TOKEN=

# Analysis Settings
MAX_REPO_SIZE_MB=500
CLONE_TIMEOUT_SECONDS=300

# Multi-Tenancy (set to true for multi-tenant mode)
ENABLE_MULTI_TENANCY=false
